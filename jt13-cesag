<!-- IMPORTANT : Fichier JS dans le même dossier -->
<script src="students_dashboard_FINAL.js"></script>

<script>
function login(){
const email=document.getElementById('email').value.toLowerCase().trim();
const pwd=document.getElementById('pwd').value.toUpperCase().trim();

if(typeof studentsData === "undefined"){
alert("Le fichier JS n'est pas chargé.");
return;
}

const user=studentsData.find(u=>u.e===email && u.p===pwd);

if(!user){
document.getElementById('error').style.display='block';
return;
}

document.getElementById('login').style.display='none';
document.getElementById('dashboard').style.display='block';

document.getElementById('name').innerHTML=user.n +
(user.t===100 ? '<span class="badge100">100% Validé</span>' : '');

document.getElementById('emailDisplay').innerText=user.e;
document.getElementById('percent').innerText=user.t + '%';

setTimeout(()=>{
document.getElementById('bar').style.width=user.t + '%';
},200);

let html="";
for(let mod in user.details){
html+=`<div class="module">
<div class="module-head">${mod}</div>`;
for(let act in user.details[mod]){
html+=`<div class="item">
<span>${act}</span>
<span class="${user.details[mod][act]?'done':'missing'}">
${user.details[mod][act]?'Terminé':'À faire'}
</span>
</div>`;
}
html+="</div>";
}
document.getElementById('modules').innerHTML=html;
}
</script>

